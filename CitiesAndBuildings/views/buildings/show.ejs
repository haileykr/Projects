<% layout('layouts/boilerplate')%>

<div class="row">
    <!-- <div class="col-6 offset-3"> -->
    <div class="col-4">
                
        <div id="buildingCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% building.images.forEach((img, index) => {%>
                <div class="carousel-item <%= index === 0? 'active': ''%>"> 
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>
            </div>
            <% if (building.images.length>1){ %> 
            <a class="carousel-control-prev" href="#buildingCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#bulidingCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
            </a>
            <% } %>
        </div>
        </div>
        <div class="col-6">
        <div class="card mb-3">
        
            <div class="card-body">
                <h5 class="card-title"><%= building.title %></h5>
                <p class="card-text"><%= building.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= building.location %></li>
                <!-- <li class="list-group-item">Created by < %= building.author.username %> </li> -->

                <li class="list-group-item">Completed in <%= building.year %> </li>
                <li class="list-group-item"><%= building.height %> ft</li>
            </ul>
            <!-- < % if (currentUser && campground.author.equals(currentUser._id)){ %>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/< %=campground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/< %= campground._id%>?_method=DELETE" method="POST">
                        <button class="  btn   btn-danger">DELETE</button>
                    </form>
                </div>

            < % } %>  -->
        </div>
    </div>
    <div id='map' ></div>
</div>


